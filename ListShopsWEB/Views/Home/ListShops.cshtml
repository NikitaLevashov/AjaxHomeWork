@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StoreList</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<style>
    div { 
    width: 20%; 
    background: gray; 
    padding: 20px; 
    -webkit-box-sizing: border-box;
    border-width: 2px;
    border-color: palevioletred;
    }
</style>
<body>
    <h3><b>Список магазинов</b></h3>
    <table border="1">
        <tr>
            <td width="100">Название магазина</td>
            <td width="100">Режим работы</td>
            <td width="100"></td>
        </tr>
    </table>

    @{
        var item = 0;
    }

    @for (int i = 0; i <= @ViewBag.Shops.Count - 1; i++)
    {
        item = i;
      
        <table border="1">
            <tr>
                <td width="100">@ViewBag.Shops[i].Name</td>
                <td width="100">@ViewBag.Shops[i].OperatingMode</td>
                <td width="100" style="color: blue; text-decoration: underline"; class="@item" >О магазине</td>
            </tr>
        </table>
     }
   
    <p id='mydiv1'></p>

    <script>
        for (let i = 0; i < @ViewBag.Shops.Count; i++) { $(document).ready(function () {
            $('.' + i).click(function () {
                $.get("/Home/ShowInformationOfShop?positionShopOfTableInView=" + i, function (data) {
                    $("#mydiv1").html(data);
                });

            });
        });
        }

    </script>
</body>

</html>